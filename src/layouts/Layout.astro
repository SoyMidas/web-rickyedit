---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="phone">
      <slot />
    </div>
  </body>
</html>

<style type="text/css" is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap");

  html {
    @apply grid 
    place-content-center
    bg-gray-300
    h-screen w-screen;
  }

  #phone {
    @apply w-[428px]
    aspect-[9/16]
    p-3
    rounded-lg
    shadow-md
    relative
    bg-gradient-to-t
    from-white from-85% to-transparent
    overflow-hidden;
  }

  #phone::before {
    content: "";
    @apply w-full absolute top-0 left-0 h-full -z-10;
    background-image: repeating-conic-gradient(#000000 0% 25%, #fc64ff 0% 50%);
    background-size: 128px 128px;
    background-position:
      0 0,
      64px 64px;
  }

  @font-face {
    font-family: "KyivType-Sans";
    src: url("../fonts/Dmitry Rastvortsev - KyivType Sans Bold2.otf")
      format("opentype");
  }
</style>

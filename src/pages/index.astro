---
import Layout from "@/layouts/Layout.astro";

import Canciones from "@/components/ui/lists/musicList.astro";
import Videos from "@/components/ui/lists/videoList.astro";

const isLive = true;
---

<Layout title="Welcome to Astro.">
  <div id="content" class="pt-14">
    <header class="flex gap-2 items-center">
      <div
        id="live"
        class={`
        top-[130px] left-[56px] 
        absolute rounded-md 
        bg-gradient-to-bl to-red-600 from-red-400
        animate-pulse
        px-2 py-1 text-xs 
        font-semibold text-white
        ${!isLive && "hidden"}
        `}
      >
        live
      </div>
      <img
        src="/ricky-fdp.png"
        alt="Foto de @Rickyedit"
        class="
        rounded-full 
        bg-purple-500 
        p-[2px] 
        size-20 
        inline 
        shadow-md
        "
      />
      <div class="flex items-baseline gap-1">
        <span class="text-4xl font-Kyiv">Rick</span>
        <span class="text-sm text-stone-500">@rickyedit</span>
      </div>
    </header>
    <hr class="mt-3" />
    <main>
      <Canciones />
      <Videos />
    </main>
  </div>
</Layout>
